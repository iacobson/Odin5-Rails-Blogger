
<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %>
      				<!-- Note this si article_path, not articles_path -->
      				<!-- class and id are needed for CSSs -->
    </li>
  <% end %>
</ul>

<% if logged_in? %>
<%= link_to "Create a New Article", new_article_path, class: "new_article" %>
<% end %>
<br>
<%= link_to "Show all Tags", tags_path, id: "show_all_tags" %>
